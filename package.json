{
  "name": "cf-next-workers-d1-r2-boilerplate",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/lilpacy/cloudflare-next-boilerplate.git"
  },
  "homepage": "https://github.com/lilpacy/cloudflare-next-boilerplate",
  "bugs": {
    "url": "https://github.com/lilpacy/cloudflare-next-boilerplate/issues"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "deploy": "npm run deploy:prod",
    "deploy:prod": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "deploy:preview": "opennextjs-cloudflare build && opennextjs-cloudflare deploy --env preview",
    "preview:cf": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf:typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:create": "wrangler d1 create my-app-db",
    "db:create:preview": "wrangler d1 create my-app-db-preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply my-app-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply my-app-db --remote",
    "db:migrate:preview": "wrangler d1 migrations apply my-app-db-preview --remote --env preview",
    "db:shell:local": "wrangler d1 execute my-app-db --local --command",
    "db:shell:prod": "wrangler d1 execute my-app-db --remote --command",
    "db:shell:preview": "wrangler d1 execute my-app-db-preview --remote --env preview --command",
    "db:export:local": "wrangler d1 export my-app-db --local --output=./database-local.sql",
    "db:export:prod": "wrangler d1 export my-app-db --remote --output=./database-prod.sql",
    "db:export:preview": "wrangler d1 export my-app-db-preview --remote --env preview --output=./database-preview.sql",
    "storage:create": "wrangler r2 bucket create my-app-storage",
    "storage:create:cache": "wrangler r2 bucket create my-app-cache",
    "storage:create:preview": "wrangler r2 bucket create my-app-storage-preview",
    "storage:create:cache:preview": "wrangler r2 bucket create my-app-cache-preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.899.0",
    "@clerk/nextjs": "^6.33.1",
    "@opennextjs/cloudflare": "^1.14.7",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.5",
    "next": "^15.5.9",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.17",
    "better-sqlite3": "^12.6.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "happy-dom": "^20.3.0",
    "husky": "^9.1.7",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17",
    "wrangler": "^4.40.3"
  }
}
